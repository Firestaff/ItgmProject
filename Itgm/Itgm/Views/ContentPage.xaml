<UserControl x:Class="Itgm.Views.ContentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Itgm"
             xmlns:v="clr-namespace:Itgm.Views"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{StaticResource TwitterTweetBackgroundBrush}">
            <Grid.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DefaultButtonStyle}"/>
            </Grid.Resources>

            <Grid VerticalAlignment="Stretch"
                  HorizontalAlignment="Left" 
                  Margin="5,2,0,2"
                  Width="22">
                <Border Name="AvatarImageMask" 
                        CornerRadius="4" 
                        Background="{StaticResource TwitterTweetBackgroundBrush}"/>
                <Image Source="{Binding User.ProfileImageUrl, Mode=OneWay, IsAsync=True}" 
                       Name="ContentImage">
                    <Image.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=AvatarImageMask}" />
                    </Image.OpacityMask>
                </Image>
            </Grid>

            <TextBlock Text="{Binding User.ScreenName, Mode=OneWay, StringFormat=@{0}}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="30,0,0,0"
                       FontWeight="Normal"
                       FontSize="12"
                       Foreground="{StaticResource TwitterAdditionalTextBrush}"
                       TextTrimming="CharacterEllipsis"/>

            <Button Command="{Binding UpdateCommand}"
                    HorizontalAlignment="Center" 
                    FontSize="14"
                    Content="Обновить"/>

            <CheckBox Style="{StaticResource AnimatedSwitch}" 
                      Width="40"
                      Command="{Binding SwitchContentCommand}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right" 
                      Margin="0,0,55,0"/>

            <Button Command="{Binding ReloginCommand}"
                    HorizontalAlignment="Right" 
                    Margin="0,0,5,0"
                    Content="Выйти"/>
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding CurrentContent, Mode=OneWay}"/>
    </Grid>
</UserControl>
